<Page
    x:Class="DB_FINAL_PROJECT.Views.LOGINPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <StackPanel>
            <TextBlock x:ConnectionId='3' x:Name="mainText" Text="Login into your account!" FontSize="40" FontWeight= "Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="12 12 12 40" />
            <TextBox x:ConnectionId='4' x:Name="userText" Width="300" Header="🙂 Username" PlaceholderText="Enter your username" FontSize="15" HorizontalAlignment="Center" Margin="5 5 5 20"/>
            <PasswordBox x:ConnectionId='5' x:Name="passText" Width="300" Header="🔑 Password" PlaceholderText="Enter your password" FontSize="15" HorizontalAlignment="Center" Margin="5 5 5 40" />
            <Button x:ConnectionId='6' Width="100" Content="Login" HorizontalAlignment="Center" Style="{StaticResource AccentButtonStyle}"  Margin="13"                          />
        </StackPanel>

    </Grid>
     
</Page>

