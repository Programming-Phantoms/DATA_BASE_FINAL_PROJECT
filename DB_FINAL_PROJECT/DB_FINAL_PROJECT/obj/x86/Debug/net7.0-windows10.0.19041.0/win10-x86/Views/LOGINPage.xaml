<Page
    x:Class="DB_FINAL_PROJECT.Views.LOGINPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image x:ConnectionId='3' x:Name="Login_Pic" Source="/Assets/Login_Pic.png" Height="200" Width="200" Margin="0 0 0 20"/>
                <Image x:ConnectionId='4' x:Name="Tick" Source="/Assets/Tick.png" Height="170" Width="170" Visibility="Collapsed" Margin="0 0 0 20"/>
                <TextBox x:ConnectionId='5' x:Name="userText" Width="300" Header="Username" PlaceholderText="Enter your username" FontSize="15" HorizontalAlignment="Center" Margin="5 5 5 20"/>
            <PasswordBox x:ConnectionId='6' x:Name="passText" Width="300" Header="Password" PlaceholderText="Enter your password" FontSize="15" HorizontalAlignment="Center" Margin="5 5 5 40" />
            <Button x:ConnectionId='7' Width="300" Height="35" FontWeight="Bold" Content="Login" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 50"                          />
        </StackPanel>
        </ScrollViewer>

    </Grid>
     
</Page>

